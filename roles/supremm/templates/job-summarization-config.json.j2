{
    "xdmodroot": "{{ xdmod_config_dir }}",
    "datawarehouse": {
        "include": "xdmod://datawarehouse"
    },
    "resources": {
        "{{ slurm_cluster_name }}": {
            "resource_id": 1,
            "batch_system": "XDMoD",
            "enabled": true,
            "pcp_log_dir": "{{ pcp_log_dir }}",
            "hostname_mode": "hostname",
            "batchscript": {
                "path": "{{ job_script_dir }}",
                "timestamp_mode": "start"
        }
    },
    "outputdatabase": {
        "include": "xdmod://jobsummarydb"
    },
    "summary": {
        "archive_out_dir": "{{ archive_out_dir }}",
        "subdir_out_format": "%r/%j"
    }
}
